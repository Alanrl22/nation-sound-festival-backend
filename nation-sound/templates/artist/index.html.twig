{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<div class="container artist">
    <h1>Ajouter un artiste</h1>

    {% for msg in app.session.flashBag.get('success') %}
    <div class="success-message">
        {{msg}}
    </div>
    {% endfor %}


    {{ form(artistForm) }}

    <div class="list">
        <h2>Liste des artistes</h2>
        <ul>
            {% for artist in artists %}
            <li>
                <a href="{{ path('artist_edit', {'id':artist.id}) }}">
                    <p>{{ artist.name }}</p>
                    <img src="{{ asset('images/edit.svg') }}">
                </a>
                <a href="{{ path('artist_delete', {'id': artist.id}) }}" class="delete"
                    onclick="return confirm('Attention ceci va supprimer l\'artist selectionnÃ©')"><button><img
                            src="{{asset('images/delete.svg')}}" alt=""></button></a>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>


{% endblock %}