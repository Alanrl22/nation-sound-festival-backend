{% extends 'base.html.twig' %}

{% block title %}Hello ArtistController!{% endblock %}

{% block body %}
<div class="container artist">
    <h1>Ajouter un artiste</h1>

    {% for msg in app.session.flashBag.get('success') %}
    <div class="success-message">
        {{msg}}
    </div>
    {% endfor %}


    {{ form(artistForm) }}

    <div class="list">
        <h2>Liste des artistes</h2>
        <ul>
            {% for artist in artists %}
            <li>
                <p><a href="{{ path('artist_edit', {'id':artist.id}) }}">{{ artist.name }}</a></p>
                <p><a href="{{ path('artist_delete', {"id": artist.id}) }}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'artist selectionner')">Delete</a></p>
            </li>
            {% endfor %}
        </ul>
    </div>
</div>


{% endblock %}